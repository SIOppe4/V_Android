<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grayLight"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:divider="@color/grayLight"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">



            <EditText
                android:id="@+id/nom"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Nom"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/prenom"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Prénom"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/tel"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Téléphone"
                android:inputType="phone"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/adresse"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Adresse"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/adresse_ln"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Complément d'adresse"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/cp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Cp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/ville"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Ville"
                android:paddingLeft="10dp"
                android:textSize="22dp" />



            <Button
                android:id="@+id/button"
                android:background="@color/startBlue"
                android:textColor="#fff"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:onClick="verifierValeurs"
                android:text="Modifier" />



        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="deleteClient"
        app:backgroundTint="#e74c3c"
        app:srcCompat="@drawable/ic_delete_client" />
</android.support.design.widget.CoordinatorLayout>